<% content_for :body_content_title do %>
  <%= @project_individual.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @project_individual.name %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @project_individual.category %>
    </p>
  </section>
  <section>
    <h1>Image Thumb</h1>
    <p>
      <%= image_fu @project_individual.image_thumb, nil %>
    </p>
  </section>
  <section>
    <h1>Image Full</h1>
    <p>
      <%= image_fu @project_individual.image_full, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @project_individual.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="project_individuals">
      <% @project_individuals.each do |project_individual| %>
        <li>
          <%= link_to project_individual.name, refinery.project_individuals_project_individual_path(project_individual) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
